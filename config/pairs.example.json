    {
      "id": "big-whale",
      "leaderAddress": "0x0987654321098765432109876543210987654321",
      "followerPrivateKey": "${FOLLOWER_2_PRIVATE_KEY}",
      "followerAddress": "0xYOUR_MAIN_ACCOUNT_ADDRESS_HERE",
      "risk": {
        "copyRatio": 1.0,
        "maxLeverage": 50,
        "maxNotionalUsd": 100000,
        "maxSlippageBps": 30,
        "inverse": false,
        "maxPositionDeviationPercent": 3
      },
      "minOrderNotionalUsd": 12,
      "syncDebounceMs": 500,
      "enabled": false,
      "_comment": "跟单大户时建议降低偏离度阈值(如3%)，确保仓位更紧密同步"
